{%- assign blog_title = blog.title -%}
    {%- if blog_title == 'Education' -%}
		<img class="lazyload" src="img path" data-src="https://cdn.shopify.com/s/files/1/0570/2057/files/Deb_MOnti.jpg?v=1621632769"style="width:100%; padding-bottom:25px;">
    {% endif %}
	{%- if blog_title == 'Business' -%}
		<img class="lazyload" src="img path" data-src="https://cdn.shopify.com/s/files/1/0570/2057/files/hair_business.png?v=1634944882"style="width:100%; padding-bottom:25px;">
	{% endif %}	
	{%- if blog_title == 'Maintenance' -%}
		<img class="lazyload" src="img path" data-src="https://cdn.shopify.com/s/files/1/0570/2057/files/hair_maintenance.png?v=1634944867"style="width:100%; padding-bottom:25px;">
	{% endif %}
	{%- if blog_title == 'Products' -%}
		<img class="lazyload" src="img path" data-src="https://cdn.shopify.com/s/files/1/0570/2057/files/H_C_EDUCATION_1.png?v=1635286253"style="width:100%; padding-bottom:25px;">
	{% endif %}
	{%- if blog_title == 'Ordering' -%}
		<img class="lazyload" src="img path" data-src="https://cdn.shopify.com/s/files/1/0570/2057/files/H_C_EDUCATION.png?v=1635286215"style="width:100%; padding-bottom:25px;">
	{% endif %}
{% include 'breadcrumbs' %}
<div class="blogs pb-1">
  <div class="container">
    <div class="row mb-60">
      {%- if settings.blog_show_sidebar != 'hide' -%}
        {%- if settings.blog_sidebar_position == 'dropdown' -%}
          <div class="blogs__sidebar d-none">
            {% section 'blog-sidebar' %}
          </div>
      
        {%- else -%}
          <div class="blogs__sidebar blogs__sidebar--width-md blogs__sidebar--offset-bottom d-none col-auto d-lg-block{% if settings.blog_sidebar_position == 'right' %} order-2{% endif %}" data-sticky-sidebar-parent>
            {%- if settings.blog_enable_sticky -%}
              <div class="js-sticky-sidebar">
            {%- endif -%}
              <div data-js-position-desktop="sidebar" data-sticky-sidebar-inner>
                {% section 'blog-sidebar' %}
              </div>
            {%- if settings.blog_enable_sticky -%}
              </div>
            {%- endif -%}
          </div>
          {% if settings.blog_enable_sticky %}
            <script>
              Loader.require({type: "script", name: "plugin_sticky_sidebar"});
              Loader.require({type: "script", name: "sticky_sidebar"});
            </script>
          {% endif %}
        {%- endif -%}
      {%- endif -%}
      <div class="blogs__body col">
        {% section 'blog-body' %}
      </div>
    </div>
  </div>
</div>
