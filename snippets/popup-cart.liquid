<div class="popup-cart py-25 px-20 js-popup-cart-ajax" data-popup-content>
    <div class="popup-cart__head d-flex align-items-center">
        <h5 class="m-0">{{ 'general.popups.cart.title' | t }} <span data-js-popup-cart-count></span></h5>
        <i class="popup-cart__close ml-auto cursor-pointer" data-js-popup-close>{% render 'icon-theme-164' %}</i>
    </div>
    <div class="popup-cart__content d-none-important">
        <div class="popup-cart__items mt-15 border-bottom"></div>
        <div class="popup-cart__subtotal h5 d-flex align-items-center mt-15 mb-0">
            <p class="m-0">{{ 'general.popups.cart.subtotal' | t }}</p>
            <span class="ml-auto">
                <span class="price" data-js-popup-cart-subtotal></span>
            </span>
        </div>
        {%- if settings.cart_show_free_shipping -%}
            <div class="popup-cart__free-shipping my-20">
                {% render 'free-shipping' %}
            </div>
        {%- endif -%}
      	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>      
	  	<script>
			$(document).ready(function(){
        	$('input[type="checkbox"]').click(function(e){
                    if($(this).prop("checked") == false){
                    e.preventDefault();
                    e.stopPropagation();
                    alert("You must agree with the terms and conditions of sales to check out.");
                    }
                });
            });
		</script>
          <p style="float: none; text-align: left; clear: both; margin: 10px 0;">
          <input style="float:none; vertical-align: middle;" type="checkbox" checked='checked' id="agree" required="required">
          <label style="display:inline; float:none" for="agree">I agree that by not insuring all products in full, I will not be eligible for a refund if the order is lost/damaged in shipping transit.
          </label>
          </p> 
                                  
        <div class="popup-cart__buttons mt-15"> 
          <a href="{{ routes.cart_url }}" class="btn btn--full btn--secondary" name="checkout">{{ 'general.popups.cart.button_to_cart' | t }}</a>
        </div>  
    </div>
    <div class="popup-cart__empty mt-20 d-none-important">{{ 'general.popups.cart.empty' | t }}</div>
</div>